<div class="box" id="j-album-box">
    <div class="box-main" style="height:${viewHeight}px;width:${viewWidth}px;margin-right: ${marginRight}px;">
        <img src="${img}" alt="#" class="j-album-img"  style="display: none">
    </div>
    <div class="box-aside" style="height: ${asideHeight}px;">
        <div class="aside-wrap">
            <div class="head">
                <em class="j-num num">${index}/${len}</em>查看图片[<a href="#fullscreen" class="fullScreen">查看全屏</a>]
            </div>
            <p class="j-desc desc">
                ${description}
            </p>
        </div>
    </div>
</div>